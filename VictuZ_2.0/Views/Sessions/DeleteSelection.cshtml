@model IEnumerable<VictuZ_2._0.Models.Sessions.Session>

@{
    ViewData["Title"] = "Delete a Session";
}

<h1>Delete a Session</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Activity Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var session in Model)
        {
            <tr>
                <td>@session.Title</td>
                <td>@session.Description</td>
                <td>@session.ActivityDate.ToString("dd-MM-yyyy")</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@session.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
