@model IEnumerable<MVC.Models.UserWithRolesViewModel>

@{
    ViewData["Title"] = "Gebruikersbeheer";
}

<h1>Gebruikersbeheer</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().User.Name)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().User.Email)</th>
            <th>Rollen</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User.Name</td>
                <td>@item.User.Email</td>
                <td>@string.Join(", ", item.Roles)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.User.Id" class="btn btn-sm btn-primary">Bewerken</a>
                    <a asp-action="ManageRoles" asp-route-id="@item.User.Id" class="btn btn-sm btn-secondary">Rollen Beheren</a>
                    <a asp-action="ResetPassword" asp-route-id="@item.User.Id" class="btn btn-sm btn-warning">Wachtwoord Resetten</a>
                </td>
            </tr>
        }
    </tbody>
</table>
