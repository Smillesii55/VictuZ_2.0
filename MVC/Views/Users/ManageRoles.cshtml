@model MVC.Models.ManageUserRolesViewModel

@{
    ViewData["Title"] = "Rollen Beheren";
}

<h1>@ViewData["Title"] voor @Model.UserName</h1>

<form asp-action="ManageRoles" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        @foreach (var role in Model.Roles)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedRoleIds" value="@role.Id"
                @(Model.AssignedRoleIds.Contains(role.Id) ? "checked" : "") />
                <label class="form-check-label">@role.Name</label>
            </div>
        }
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Opslaan" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-link">Annuleren</a>
    </div>
</form>
