@model Core.Models.Suggestions.Suggestion

@{
    ViewData["Title"] = "Verwijderen";
}

<h1>Verwijderen</h1>

<h3>Weet je zeker dat je dit wilt verwijderen?</h3>
<div>
    <h4>Suggestie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubmittedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubmittedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsAnonymous)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsAnonymous)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsAnonymousToBoard)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsAnonymousToBoard)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LikeCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LikeCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedBy.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Verwijderen" class="btn btn-danger" /> |
        <a asp-action="Index">Terug naar Overzicht</a>
    </form>
</div>
